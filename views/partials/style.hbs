<style>
    *,
    *::after,
    *::before{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        border: 0;
        outline: 0;    
    }

    :root{
        --section-margin:3em;
        --biggest-heading:6.5rem;
        --biggest-para:1.4rem;
        --intro-btn:1.245rem;
        --post-heading:1.4rem;
        --post-para:1rem;
    }

    body{
        font-family: sans-serif;
    }

    img{
        display: block;
        max-width: 100%;
    }

    a{
        text-decoration: none;
    }

    button{
        cursor: pointer;
    }

    a:visited,a:link{
        color: initial;
    }

    header{
        position: sticky;
        top: 0;
    }

    .container{
        max-width: 1220px;
        margin-inline: auto;
        width: 90%;
    }

    .section{
        background-color: #FFC017;
        border-bottom: 1px solid black;
    }

    .nav-div{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar{
        width: 100%;
        margin-left: 0.2em;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-block: 1em;
    }

    .logo-text{
        font-family: serif;
        font-weight: 700;
        letter-spacing: -2px;
    }

    .inner-navbar{
        display: flex;
        align-items: center;
    }

    .inner-navbar > *{
        margin-left: 2rem;
    }

    .nav-btn{
        color: aliceblue;
        font-weight: 600;
        padding: 0.9em 1.5em;
        border-radius: 100vh;
        background-color: black;
    }

    .intro{
        background-color: #FFC017;
        border-bottom: 1px solid black;
    }

    .intro-content{
        display: flex;
    }

    .intro-left{
        margin:5em 0 6em 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        row-gap: 2em;
    }

    .intro-left h1:first-child{
        font-size: var(--biggest-heading);
        font-weight: 500;
        letter-spacing: -3px;
    }

    .intro-left p{
        width: 80%;
        font-size: var(--biggest-para);
        font-weight: 500;
    }

    .intro-left button{
        color: aliceblue;
        background-color: black;
        font-size: var(--intro-btn);
        font-weight: 500;
        padding: 0.5em 2.5em;
        border-radius: 100vh;
    }

    .trending{
        padding-block: var(--section-margin);
        border-bottom: 1px solid #d7d7d7;
    }

    .trending-heading{
        padding-left: 7px;
        display: flex;
        gap: 1em;
        align-items: center;
        margin-bottom:1rem ;
        color: #242424;
    }

    .trending-logo{
        font-weight: 100;
        border: 1px solid black;
        width: fit-content;
        border-radius: 50%;
        padding: 1px;
    }

    .trending-content{
        display: grid;
        grid-template-columns: repeat( auto-fill, minmax(300px, 1fr));
        grid-auto-flow: row;
        gap: 2rem;
    }

    .trending-serial-number{
        font-size: 2.3rem;
        font-weight: 600;
        color: #F2F2F2;
        display: flex;
        justify-content: flex-start;
    }

    .treding-content-parent{
        display: flex;
        gap: 1rem;
    }

    .user-info{
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-pic{
        border-radius: 50%;
        overflow: hidden;
    }

    .user-company{
        font-size: 0.7rem;
        font-weight: 600;
    }

    .trending-post{
        display: flex;
        flex-direction: column;
        gap: 0.7rem;
    }

    .trending-post-heading{
        font-weight: 600;
    }

    .trending-post-date{
        font-size: 0.74rem;
    }

    .article{
        margin-block: var(--section-margin);
        {{!-- padding-block: var(--section-margin); --}}

    }

    .tags{
        margin-bottom: var(--section-margin);
        position: sticky;
        top: 15%;
        height: min-content;
    }

    .tags > :first-child{
        font-weight: 600;
    }

    .tags-btn-area{
        margin-top: 1rem;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .tag-btn{
        background-color: #F2F2F2;
        color: #6B6B6B;
        font-weight: 600;
        padding: 0.7em 1.1em;
        border-radius: 100vh;
    }

    .article-area{
        display: grid;
        grid-template-columns: 60% 35%;
        justify-content: space-between;
    }

    .posts{
        display: flex;
        flex-direction: column;
        row-gap: 3rem;
    }

    .article-post{
        display: flex;
        justify-content: space-between;
    }

    .article-post > :first-child{
        width: 60%;
    }

    .article-post-heading{
        font-size: var(--post-heading);
        font-weight: 700;
        margin-bottom: 0.4rem;
    }

    .article-post-heading + p{
        font-size: var(--post-para);
        color: #6B6B6B;
    }

    .article-image-container{
        width: 35%;
        background-color: #6B6B6B;
        align-self: stretch;
    }

    .article-image-container img{
        object-position:center;
        object-fit: cover;
        width: 100%;
    }

    .load-more-container{
        display: flex;
        justify-content: center;
    }

    .load-more{
        padding: 0.5em 2em;
        font-size: var(--post-para);
        background-color: #FFC017;
        border: 2px solid black;
        border-radius: 100vh;
    }

    .load-more:hover{
        scale: 1.05;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .load-more:active{
        scale: 0.95;
    }


    @media (max-width:900px){
        :root{
        --biggest-heading:5rem;
        --biggest-para: 1.3rem;
        --intro-btn:1.1rem;
        }

        .inner-navbar > *:not(:nth-last-child(1)):not(:nth-last-child(2)) {
            display: none;
        }

        .article-area{
            display: flex;
            flex-direction: column-reverse;
        }

        .tags{
            position: static;
        }

    }

    @media (max-width:600px){
        :root{
            --biggest-heading:4rem;
            --biggest-para:1.2rem;
            --intro-btn:1.2rem;
            --post-heading:1.2rem;
            --post-para:0.9rem;
        }

        .intro-left p{
            width: initial;
        }

        .inner-navbar > *:not(:nth-last-child(1)) {
            display: none;
        }
    }

    @media (max-width:400px){
        :root{
        --biggest-heading:4rem;
        --biggest-para:1.2rem;
        --intro-btn:1.2rem;
        }

        .logo{
            display: none;
        }
    }
</style>